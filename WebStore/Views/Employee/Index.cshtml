@model List<WebStore.ViewModels.EmployeeView>

<h2>Employees List</h2>

<a asp-action="Edit" class="btn btn-success">Add</a>
<table class="table">
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.ActionLink(item.Id.ToString(), "Details", new { id = item.Id })
        </td>
        <td>@item.FirstName</td>
        <td>@item.Patronymic</td>
        <td>@item.LastName</td>
        <td>@item.Age</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
        </td>
        <td>
            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-cut"></i></a>
        </td>
    </tr>
    }
    
</table>